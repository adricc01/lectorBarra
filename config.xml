<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.cae3076.Barcode"
        version     = "1.0.1"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="4.0.0" />

        <name>Barcode Reader</name>

        <description>
            Aplicación de prueba para leer códigos de barra.
        </description>

        <author href="#" email="adominguez@cae3076.com">
            Adrián Domínguez
        </author>
        
        <preference name="splashscreen" value="franco.png" />
		<preference name="SplashScreenDelay" value="3000" />
		<icon src="img/icono2.png" />
		<splash src="img/franco.png"/>
        <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
        
        <gap:plugin name="com.phonegap.plugins.barcodescanner" source="npm"/>
        <gap:plugin name="org.apache.cordova.network-information" source="npm"/>

        <access origin="*"/>
        <allow-intent href="*"/>
        <allow-navigation href="*"/>
    </widget>
