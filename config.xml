<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "mx.cenet.hotelApp"
        version     = "1.0.0"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />

        <name>LectorBarra</name>

        <description>
            Aplicación de prueba para leer codigos de barras.
        </description>

        <author href="#" email="adominguez@cae3076.com">
            Adrián Domínguez
        </author>

        <icon src="img/icono.jpg" />
        <splash src="img/splash.png" />
        <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
        
        <gap:plugin name="org.apache.cordova.media-capture" source="npm"/>
        <gap:plugin name="org.apache.cordova.file-transfer" source="npm"/>
        <gap:plugin name="org.apache.cordova.barcodeScanner" source="npm"/>

        <access origin="*"/>
        <allow-intent href="*"/>
        <allow-navigation href="*"/>
    </widget>
